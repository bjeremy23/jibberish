# This file should be placed ~/.jbrsh

AI_CHOICE=<"azure", "openai">

#only this is needed for open ai
OPEN_API_KEY=<your openai api key> 
OPEN_API_MODEL=<model name> # model i.e. gpt-4, gpt-4.1

#only this is needed for azure open ai
# provide the client id for the managed identity to use that auth method
#AZURE_CLIENT_ID=<your azure client id>
# or provide your Azure user name (ex. user@a4opacketcore.microsoft.com) to use user-based auth
#AZURE_USER_NAME=<your azure user name>
# or provide your Azure OpenAI key to use key-based auth
AZURE_OPENAI_API_KEY= <your azure openai api key>

AZURE_OPENAI_ENDPOINT=<your azure openai endpoint>
AZURE_OPENAI_API_VERSION=<your azure openai api version> 
# model i.e. gpt-4, gpt-4.1
AZURE_OPENAI_DEPLOYMENT_NAME=<your azure openai deployment name>

# the warn list is a list of commands that will prompt the user before executing
# setting the WARN_LIST="all" will make the script warn you about all commands
WARN_LIST="rm, rmdir, mv, cp, ln, chmod, chown, chgrp, kill, pkill, killall, shutdown, reboot, halt, poweroff"

# the interactive list is a list of commands that will be run in interactive mode
INTERACTIVE_LIST="python, python3, gvim, vi, vim, nano, emacs, less, more, top, htop, tail -f, watch, ssh, scp, rsync, ftp, curl, wget, exec, bash" 

# Prompt before proceeding with any AI generated command
PROMPT_AI_COMMANDS=true

# Prompt for more AI assisted information on returned errors
IGNORE_ERRORS=true

# The default AI partner for chat (default: "Marvin the Paranoid Android")
AI_PARTNER="Marvin the Paranoid Android"

# Maximum number of history entries to keep (default is 2000 if not specified)
MAX_HISTORY_LINES=2000

# Master switch to enable/disable colored output (default: true)
FORCE_COLOR_OUTPUT=true

# Color forcing for different tools
FORCE_COLOR=1
CLICOLOR_FORCE=1
CLICOLOR=1
COLORTERM=truecolor
TERM=xterm-256color

# Git-specific settings
GIT_PAGER=cat
# Git config requires single quotes INSIDE the value
GIT_CONFIG_PARAMETERS="'color.ui=always'"

# Other tools
GREP_OPTIONS=--color=always
LS_COLORS=rs=0:di=01;34:ln=01;36:mh=00:pi=40;33
